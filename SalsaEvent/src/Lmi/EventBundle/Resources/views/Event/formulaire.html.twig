{% set redirectUrl = redirectUrl|default(null) %}
{% set page = page|default(null) %}

<div class="well">
	<form method="post" {{ form_enctype(form) }}>
		{{ form_widget(form) }}
		<br /><br />
		{% if index_btn_to_activate == 4 %}
			<input type="submit" id="btn-submit" class="btn btn-primary btn-message" />
		{% elseif index_btn_to_activate == 5 %}
			<input type="submit" id="btn-submit" class="btn btn-primary btn-comment" />
		{% else %}
			<input type="submit" id="btn-submit" class="btn btn-primary" />
		{% endif %}
		<input type="reset" value="{{ 'button.cancel'|trans }}" id="btn-reset" class="btn btn-default" />
		
		{% if page %}
			<a href="{{ path(redirectUrl, {'id': bean.id, 'page': page}) }}" class="btn btn-retrun">
		{% else %}
			<a href="{{ path(redirectUrl, {'id': bean.id, 'page': page}) }}" class="btn btn-retrun">
		{% endif %}
			{% if redirectUrl == 'lmievent_accueil' %}
				<i class="icon-home"></i>
				{{ 'button.goback.index'|trans }}
			{% else %}
				<i class="icon-chevron-left"></i>
				{{ 'button.goback.detail'|trans }}
			{% endif %}
		</a>
	</form>
</div>
