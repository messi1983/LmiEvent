{% set secondButton = secondButton|default('publish') %}
{% set rowView = rowView|default('') %}

{% if nombrePage != 0 %}
	<div class="row">
		{% if rowView == 'LmiEventBundle:Event:formation.html.twig' %}
			<div class="cell-long-desc"></div>
			<div class="cell-ckbx"><input type="checkbox" class="all"/></div>
		{% elseif rowView == 'LmiEventBundle:Event:comment.html.twig' %}
			<div class="col-avatar-avis"></div>
			<div class="col-auteur-avis-1"></div>
			<div class="col-check-all"><input type="checkbox" class="all"/></div>
		{% elseif rowView == 'LmiEventBundle:Event:message.html.twig' %}
			<div class="col-auteur-msg"></div>
			<div class="col-sujet-msg"></div>
			<div class="col-date-msg"></div>
			<div class="col-check-all"><input type="checkbox" class="all"/></div>
		{% else %}
			<div class="cell-logo"></div>
			<div class="cell-short-desc"></div>
			<div class="cell-ckbx"><input type="checkbox" class="all"/></div>
		{% endif %}
	</div>
	
	<div class="buttons">
		<input type="hidden" id="action" name="action" value="SUPPRESS">
		<button type="submit" id="suppress" class="btn btn-default suppress">
			<i class="icon-trash"></i> {{ 'button.delete.label'|trans }}
		</button>
		{% if secondButton == 'publish' %}
			<button type="submit" id="publish" class="btn btn-default">
				<i class="icon-share"></i> {{ 'button.publish.label'|trans }}
			</button>
		{% elseif rowView != 'LmiEventBundle:Event:message.html.twig' %}
			<button type="submit" id="unpublish" class="btn btn-default">
				<i class="icon-remove-circle"></i> {{ 'button.unpublish.label'|trans }}
			</button>
		{%endif %}
	</div>
{% endif %}
