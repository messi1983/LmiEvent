{% extends 'form_div_layout.html.twig' %}

{% block radio_widget %}
	{% spaceless %}
		<input type="radio" class="cbx" {{ block('widget_attributes') }} {% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
		<label  for="{{ id }}" class="cbxLabel">{{ label|trans }}</label>
	{% endspaceless %}
{% endblock radio_widget %}

