{% extends "::layout.html.twig" %}

{% block body %}
	{% block fos_user_subtitle %}
	{% endblock fos_user_subtitle %}
   
	{# On affiche les messages flash que définissent les contrôleurs du bundle #}
	{% for key, message in app.session.flashbag.all() %}
	<div class="alert alert-{{ key }}">
		{{ message|trans({}, 'FOSUserBundle') }}
	</div>
	{% endfor %}
 

	{% block fos_user_content %}
	<div class="well dashboard">
	
		<!-- ------------------------- -->
		<!-- --- Form popup definition -- -->
		<!-- ------------------------- -->
		<div id="dialog-message" style="width: 525px">
			<span class="button b-close"><span>X</span></span>
			<div class="content"></div>
	{# 		<div><span class="button b-confirm">{{ 'button.OK'|trans }}</span></div>#}
		</div>
		
		<!-- ------------------------- --------->
		<!-- --- Bandeau resume user -- -------->
		<!-- ------------------------- --------->
		<div style="width: 100%; height: 80px; border: 1px solid green; margin-bottom: 15px; padding: 5px">
			<div style="float: left">
				<img class="rech-style-image" src="{{ asset('bundles/lmiuser/images/messi.jpg' | imagine_filter('thumb_75x75')) }}" alt="recherche" />
			</div>
			<div style="float: left; padding: 2px; margin-left:10px">
				<p><b>Louis MESSI</b></p>
				<p style="font-size: 90%"><b>33 ans</b></p>
				<p style="font-size: 90%">Amateur <b>Salsa/Bachata/Kizomba</b></p>
			</div>
			<div style="float: right; padding: 2px; margin-left:10px">
				<p style="font-size: 90%">Vous êtes inscrit depuis le 02 Nov. 2013</p>
			</div>
		</div>
		
		<div>
			<!-- ------------------------- --------->
			<!-- --- zone infos utilisateur -- -------->
			<!-- ------------------------- --------->
			{% include "LmiEventBundle:User:UserProfil\\userProfil.html.twig" %}
			
			<!-- ------------------------- --------->
			<!-- --- zone covoiturages -- -------->
			<!-- ------------------------- --------->
			{% include "LmiEventBundle:User:CarPooling\\dash_cov.html.twig" %}
			
			<!-- ------------------------- --------->
			<!-- --- zone hebergements -- -------->
			<!-- ------------------------- --------->
			{% include "LmiEventBundle:User:Accommodation\\dash_heb.html.twig" %}
			
			<!-- ------------------------- --------->
			<!-- --- zone evenements -- -------->
			<!-- ------------------------- --------->
			{% include "LmiEventBundle:User:Event\\dash_event.html.twig" %}
		</div>

	</div>
	{% endblock %}
{% endblock %}
